doctype html
html(lang='ko')
    head
        include head.pug
        link(rel='canonical' href='https://jupiterflow.com/project')
        title= portfolioData.profile.coverText + ' - 프로젝트 목록'
        meta(name='title' content=portfolioData.profile.coverText + ' - 프로젝트 목록')
        meta(name='description' content=portfolioData.profile.desc)
        meta(property='og:url'          content='https://jupiterflow.com/project')
        meta(property='og:title'        content=portfolioData.profile.coverText + ' - 프로젝트 목록')
        meta(property='og:description'  content=portfolioData.profile.desc)
        meta(property='og:image'        content='https://jupiterflow.com' + portfolioData.profile.image)
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/4.1.1/imagesloaded.pkgd.min.js')
        script(src='/static/js/project-list.js')
        link(rel='stylesheet' type='text/css' href='/static/style/global.css')
        link(rel='stylesheet' type='text/css' href='/static/style/project-list.css')
    body
        .wrapper.cannot-drag
            include heaer_wrapper
            .portfolio-list-wrapper
                ins.adsbygoogle(style={display: 'block', 'margin-bottom':'30px'} data-ad-client='ca-pub-1462947422010620' data-ad-slot='4984819246' data-ad-format='auto' data-full-width-responsive='true')
                script.
                    (adsbygoogle = window.adsbygoogle || []).push({});
                .masonry
                    - const projectData = portfolioData.content.project.data.slice().reverse()
                    each item, idx in projectData
                        if item.hot
                            .portfolio-wrapper
                                a(href='/project/' + (projectData.length - idx))
                                    .portfolio-card
                                        .project-hot-ribbon
                                            span HOT
                                        .header
                                            .cover-background(style={'background-image': 'url(' + item.img[0] + ')'})
                                        .content
                                            span.title= item.subject
                                            = item.desc
                                        ul.stack
                                            each stack in item.stack
                                                li
                                                    span.stack-circle(style={color: colorScheme.scheme[stack]}) ●
                                                    = ' ' + stack
                                        .footer 자세히
                    each item, idx in projectData
                        if !item.hot
                            .portfolio-wrapper
                                a(href='/project/' + (projectData.length - idx))
                                    .portfolio-card
                                        .header
                                            .cover-background(style={'background-image': 'url(' + item.img[0] + ')'})
                                        .content
                                            span.title= item.subject
                                            = item.desc
                                        ul.stack
                                            each stack in item.stack
                                                li
                                                    span.stack-circle(style={color: colorScheme.scheme[stack]}) ●
                                                    = ' ' + stack
                                        .footer 자세히